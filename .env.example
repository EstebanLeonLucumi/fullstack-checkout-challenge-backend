# Copy to .env and fill with your values.
# Prisma: https://pris.ly/d/connection-strings

DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Server
PORT=3000
NODE_ENV=development

# CORS (comma-separated origins; leave empty to allow all in dev)
CORS_ORIGIN=

# App config (optional)
CURRENCY=COP
BASE_FEE=0
DELIVERY_FEE=0

# Payment provider (Sandbox UAT)
PAYMENT_PROVIDER_BASE_URL=https://api-sandbox.co.uat.wompi.dev/v1
PAYMENT_PROVIDER_PUBLIC_KEY=your_public_key
PAYMENT_PROVIDER_PRIVATE_KEY=your_private_key
PAYMENT_PROVIDER_INTEGRITY_KEY=your_integrity_key
